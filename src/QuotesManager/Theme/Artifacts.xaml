<ResourceDictionary xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system = "clr-namespace:System;assembly=mscorlib">

    <!--SIZES-->
    <system:Double x:Key = "DefaultFontSize">16</system:Double>
    <system:Double x:Key = "IconButtonSize">25</system:Double>

    <!--COLORS-->
    <Brush x:Key = "HighlightBorderBrush">LightSkyBlue</Brush>
    <Brush x:Key = "AlternationIndexBrush">LightGray</Brush>
    <Brush x:Key = "DefaultBorderBrush">Black</Brush>
    <Brush x:Key = "DefaultForegroundBrush">Black</Brush>
    <Brush x:Key = "DefaultBackgroundBrush">WhiteSmoke</Brush>

    <!--ICONS-->
    <BitmapImage x:Key = "DownloadIcon"
                 UriSource = "pack://application:,,,/QuotesManager;component/Theme/Icons/Download50.png" />
    <BitmapImage x:Key = "RefreshIcon"
                 UriSource = "pack://application:,,,/QuotesManager;component/Theme/Icons/Refresh50.png" />
    <BitmapImage x:Key = "SearchIcon"
                 UriSource = "pack://application:,,,/QuotesManager;component/Theme/Icons/Search50.png" />

</ResourceDictionary>